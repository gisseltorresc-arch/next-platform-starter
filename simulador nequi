function mostrar(funcion) {
  const contenedor = document.getElementById("funcion");
  if (funcion === "enviar") {
    contenedor.innerHTML = `
      <h2>Enviar Plata</h2>
      <select><option>A otros Nequi</option><option>A otros bancos</option></select><br>
      <input type="text" placeholder="N√∫mero de celular"><br>
      <input type="text" placeholder="Monto a enviar"><br>
      <input type="text" placeholder="Mensaje (opcional)"><br>
      <button onclick="alert('¬°Plata enviada con √©xito a 31X XXX XX XX!')">Enviar</button>
    `;
  } else if (funcion === "sacar") {
    const codigo = Math.floor(100000 + Math.random() * 900000);
    contenedor.innerHTML = `
      <h2>Sacar Plata</h2>
      <input type="text" placeholder="Monto a retirar"><br>
      <button onclick="alert('C√≥digo generado: ${codigo}\\nVigente por 30 minutos.\\nUsa este c√≥digo en cualquier cajero Bancolombia.')">Continuar</button>
    `;
  } else if (funcion === "recargar") {
    contenedor.innerHTML = `
      <h2>Recargar Celular</h2>
      <select><option>Tigo</option><option>Claro</option><option>Movistar</option></select><br>
      <input type="text" placeholder="N√∫mero de celular"><br>
      <input type="text" placeholder="Valor de la recarga"><br>
      <button onclick="confirmarRecarga()">Recargar</button>
    `;
  }
}

function confirmarRecarga() {
  const confirmar = confirm("¬øDeseas recargar $10.000 a 31X XXX XX XX?");
  if (confirmar) {
    alert("¬°Recarga exitosa!");
  }
}
